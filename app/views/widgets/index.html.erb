<h1>Listing widgets</h1>

<table>
  <tr>
    <th>Product</th>
    <th>Discrete</th>
    <th>Lft</th>
    <th>Rgt</th>
    <th>Parent</th>
    <th>Quantity</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @widgets.each do |widget| %>
  <tr>
    <td><%= widget.product %></td>
    <td><%= widget.discrete %></td>
    <td><%= widget.lft %></td>
    <td><%= widget.rgt %></td>
    <td><%= widget.parent_id %></td>
    <td><%= widget.quantity %></td>
    <td><%= link_to 'Show', widget %></td>
    <td><%= link_to 'Edit', edit_widget_path(widget) %></td>
    <td><%= link_to 'Destroy', widget, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

